{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "fs:default",
    "fs:allow-home-read-recursive",
    "fs:allow-home-write-recursive",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [{ "name": "git", "cmd": "git", "args": true }]
    }
  ]
}
